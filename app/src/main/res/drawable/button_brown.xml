<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SHADOW -->
    <item
        android:left="6dp"
        android:top="6dp">
        <shape>
            <solid android:color="#66000000" />
            <!-- alttan gölge -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- BUTTON alttan gölge
      android:right="5px" to make it round-->
    <item
        android:bottom="6dp"
        android:right="6dp">
        <shape>
            <padding
                android:bottom="5dp"
                android:top="5dp" />
            <gradient
                android:angle="270"
                android:endColor="#5A2006"
                android:startColor="@color/colorPrimaryDark" />
            <corners android:radius="10dp" />
            <padding
                android:bottom="15dp"
                android:left="10dp"
                android:right="5dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>