<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khanhpham.smartkidz">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".SmartKidzApplication"
        android:allowBackup="true"
        android:icon="@drawable/logoicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.profile.editProfile.EditActivity" android:theme="@style/NoActionBarMaterialTheme" />
        <activity android:name=".ui.profile.profilepicture.PictureChooseActivity" />
        <activity android:name=".ui.game.result.ResultActivity" />
        <activity android:name=".ui.game.gamePlay.PlayActivity" />
        <activity android:name=".ui.game.topic.TopicActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.game.GameActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.history.HistoryActivity" />
        <activity android:name=".ui.splash.SplashActivity" android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.leaderBoard.LeaderBoardActivity" />
        <activity android:name=".ui.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>